
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using WebDiDong.Models;
@model List<GioHang>

<div id="page-content" class="single-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="index.html">Home</a></li>
                    <li><a href="cart.html">Cart</a></li>
                </ul>
            </div>
        </div>
        @if (Model.Count == 0)
        {
            <p class="text-center text-danger" style="font-size: 30px">@ViewBag.ThongBao</p>
        }

        <h2 class="text-center">GIỎ HÀNG CỦA BẠN</h2>
        <div class="card boder-dark">
            <table class="table text-center">
                <tr style="background-color: lightyellow">
                    <th style="text-align: center;">MÃ SẢN PHẨM</th>
                    <th style="text-align: center;">TÊN SẢN PHẨM</th>
                    <th width="20%" style="text-align: center;">ẢNH BÌA</th>
                    <th style="text-align: center;">SỐ LƯỢNG</th>
                    <th style="text-align: center;">ĐƠN GIÁ</th>
                    <th style="text-align: center;">THÀNH TIỀN</th>
                    <th style="text-align: center;"></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.sMaSanPham</td>
                        <td>@item.sTenSanPham</td>
                        <td><img style="width: 50%;" src="~/Asset/images/@item.sAnhBia" /></td>
                        <td>@item.iSoLuong</td>
                        <td>@String.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:0,0}", @item.dDonGia) VNĐ</td>
                        <td>@String.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:0,0}", @item.dThanhTien) VNĐ</td>
                        <td><a href="@Url.Action("Details", "Shop", new { id = @item.sMaSanPham })">Detail</a></td>
                    </tr>
                }



                <tr style="background-color: lightyellow">
                    <td colspan="3" style="color: blue; font-weight: bold; text-align: right;">Tổng cộng:</td>
                    <td style="color: red; font-weight: bold;">@ViewBag.TongSoLuong</td>
                    <td></td>
                    <td style="color: red; font-weight: bold;">@String.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:0,0}", ViewBag.TongThanhTien) VNĐ</td>
                    <td></td>
                </tr>
            </table>

            <div class="row">
                <center>
                    <div class="" style="margin-bottom: 50px">
                        <a href="#!" class="btn btn-danger" style="width: 300px; line-height: 2.5; font-size: larger; margin-right: 20px;">Tiến Hành Đặt Hàng</a>
                        <a href="@Url.Action("index","Shop")" class="btn btn-info" style="width: 300px; line-height: 2.5; font-size: larger; margin-left: 20px;">Chọn thêm sản phẩm khác</a>
                    </div>
                </center>

            </div>
        </div>

    </div>
</div>



