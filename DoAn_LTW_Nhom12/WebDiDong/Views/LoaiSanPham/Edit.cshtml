@model WebDiDong.Models.LoaiSanPham
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <form action="/LoaiSanPham/Edit/@Model.MaLoaiSanPham" method="post">
            <input type="hidden" name="MaLoaiSanPham" value="@Model.MaLoaiSanPham" />
            <div class="row">
                <div class="col-md-6">
                    <label for="MaLoaiSanPham">Mã loại sản phẩm</label>
                    <input type="text"
                           class="form-control"
                           id="MaLoaiSanPham"
                           name="MaLoaiSanPham"
                           placeholder="Mã loại sản phẩm"
                           value="@Model.MaLoaiSanPham"
                           disabled />
                </div>
                <div class="col-md-6">
                    <label for="TenLoaiSanPham">Tên loại sản phẩm</label>
                    <input type="text"
                           class="form-control"
                           id="TenLoaiSanPham"
                           name="TenLoaiSanPham"
                           placeholder="Tên loại sản phẩm"
                           value="@Model.TenLoaiSanPham"
                           required />
                </div>
                <center>
                    <button type="submit" class="btn btn-success" style="margin-top: 20px; margin-bottom: 20px; ">Save</button>
                    <a href="/LoaiSanPham" class="btn btn-info">Cancel</a>
                </center>
            </div>
        </form>
    </div>

